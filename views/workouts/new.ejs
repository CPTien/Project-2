<%- include('../partials/header') %>

<div>Please ensure that the workout is not in the following list:</div>
<section id="workout-container">
  <% workouts.forEach(function(w) { %>
    <article class="workout-list"><%= w.name %></article>
    <article class="workout-list"><%= w.category %></article>
    <article class="workout-list"><%= w.group %></article>
    <article class="workout-list"><%= w.description %></article>
  <% }) %>
</section>

<form id="add-workout-form" action="/workouts" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <label>Category:</label>
  <select name="category">
    <option value="cross-fit">Cross-Fit</option>
    <option value="weight-lifting">Weight-Lifting</option>
    <option value="cardio">Cardio</option>
    <option value="other">Other</option>
  </select>
  <label>Group:</label>
  <select name="group">
    <option value="upper-body">Upper-Body</option>
    <option value="lower-body">Lower-Body</option>
    <option value="other">Other</option>
  </select>
  <label>Description:</label>
  <textarea name="description"></textarea>
  <!-- <label>Image:</label>
  <input type="image" name="born"> -->
  <input type="submit" value="Add Workout">
</form>

<%- include('../partials/footer') %>