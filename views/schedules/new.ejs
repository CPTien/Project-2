<%- include('../partials/header') %>

<form id="add-to-schedule-form" action="/schedules" method="POST">
  <label><span>D</span>ay</label>
  <select name="day">
    <option value="Monday">Monday</option>
    <option value="Tuesday">Tuesday</option>
    <option value="Wednesday">Wednesday</option>
    <option value="Thursday">Thursday</option>
    <option value="Friday">Friday</option>
    <option value="Saturday">Saturday</option>
    <option value="Sunday">Sunday</option>
  </select>
  <label><span>W</span>orkout</label>
  <input type="string" name="workout">
  <label><span>S</span>ets</label>
  <input type="number" name="sets">
  <label><span>R</span>eps</label>
  <input type="number" name="reps">
  <label><span>W</span>eights</label>
  <input type="text" name="weights">

  <input class= "add-to-schedule-button" type="submit" value="+">
