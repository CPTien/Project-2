<!-- this is the page with the weekly schedule (added from the add page) -->

<%- include('../partials/header') %>

<table id="schedule-1">
  <div>Monday</div>
  <thead>
    <tr>
      <th>Workout</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Weights</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% schedules.forEach(function(s) { %>
      <% if (s.day === 'Monday') { %>
      <tr>
        <td><%= s.workout %></td>
        <td><%= s.sets %></td>
        <td><%= s.reps %></td>
        <td><%= s.weights %></td>
        <td><a href="/schedules/<%= s._id %>">Detail</a></td>
      </tr>
      <% }%>
    <% }); %>
  </tbody>
</table>
<br>

